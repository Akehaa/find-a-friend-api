generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id                      String @id @default(uuid())
  nameOfPersonResponsible String @map("name_of_person_responsible")
  email                   String @unique
  city                    String
  cep                     String
  address                 String
  whatsapp                String
  password                String
  Pet                     Pet[]

  @@map("orgs")
}

model Pet {
  id     String @id @default(uuid())
  name   String
  city   String
  about  String
  age    Int
  weight Float
  breed  String
  size   String
  orgId  String @map("org_id")

  org        Org          @relation(fields: [orgId], references: [id])
  Attachment Attachment[]

  @@map("pets")
}

model Attachment {
  id    String  @id @default(uuid())
  title String
  url   String
  petId String? @map("pet_id")

  pet Pet? @relation(fields: [petId], references: [id])

  @@map("attachments")
}
